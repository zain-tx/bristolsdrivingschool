            display: flex;
            justify-content: center;
            align-items: center;
            width: 40px;
            height: 40px;
            border-radius: 5px;
        }

        .success-stories img {
            width: 20px; /* Adjust icon size */
            height: auto; /* Maintain aspect ratio */
        }

        .success-stories-text {
            display: flex;
            flex-direction: column;
        }

        .feature-list ul {
            list-style-type: none; /* Remove the default bullets */
            padding: 0;
        }

        .feature-list li {
            display: flex;
            align-items: center;
        }

        .feature-icon {
            width: 16px; /* Adjust this to the desired size */
            height: 16px; /* Adjust this to the desired size */
            background-image: url(<%= asset_path('task_alt.png') %>); /* Relative path to logo */
            background-size: contain; /* Make sure the logo fits */
            background-repeat: no-repeat;
            margin-right: 8px; /* Space between the logo and the text */
        }

        .feature-list span {
            font-size: 16px; /* Adjust the font size */
        }


        /* Responsive Design for Mobile */
        @media (max-width: 768px) {
            .container-fluid {
                flex-direction: column; /* Stack the boxes vertically on mobile */
                height: auto; /* Adjust height for mobile */
            }

            .about-section {
                flex-direction: column; /* Stack image and content vertically */
            }

            .about-section img {
                width: 80%; /* Adjust image width on mobile */
                margin: 20px 0; /* Adjust margin for mobile */
            }

            .box {
                flex: 1 1 100%; /* Stack boxes vertically */
                margin: 10px 0; /* Adjust margin between stacked boxes */
            }

            .about-content .feature-columns .feature-list {
                width: 100%; /* Make feature lists stack on mobile */
                margin-bottom: 20px;
            }
        }

        /* Additional responsiveness for very small screens */
        @media (max-width: 480px) {
            .box-text h3 {
                font-size: 1.2em; /* Adjust font size for smaller screens */
            }

            .box-text p {
                font-size: 8px; /* Adjust font size for smaller screens */
