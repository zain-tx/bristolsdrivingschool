    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        .container-fluid {
            height: 23vh; /* Set height to 100% of viewport */
            display: flex; /* Use flexbox for layout */
            justify-content: space-between; /* Space boxes evenly */
            flex-wrap: wrap; /* Allow wrapping for smaller screens */
        }

        .box {
            display: flex; /* Enable flexbox layout */
            align-items: center; /* Vertically center the items */
            gap: 20px; /* Adds space between the icon and text */
            background-color: #F2FFFC;
            padding: 20px;
            height: 120%;
            margin: 10px;
            flex: 1; /* Allow boxes to take equal width */
        }

        .box-icon {
            width: 40px; /* Adjust the icon size */
            height: auto; /* Maintain aspect ratio */
            order: 0; /* Move icon to the beginning of the flex order */
        }

        .box-text {
            order: 1; /* Move text content after the icon */
        }

        .box-text h3 {
            margin: 0;
            font-size: 1.5em;
        }

        .box-text p {
            margin: 0;
            color: #555; /* Optional: You can style the text color */
            font-size: 10px;
        }

        .about-section {
            display: flex;
