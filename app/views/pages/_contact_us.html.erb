
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
        }

.contact-section {
    background: url('path-to-your-background-image.png') no-repeat center center/cover;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    color: white;
    padding: 2rem;
}

.contact-form-container {
    position: relative;
    z-index: 2;
    width: 90%;
    max-width: 900px;
    text-align: center;
}

.contact-form h1 {
    font-size: clamp(1.5rem, 3vw, 3rem); /* Adjusts size dynamically */
}

.form-control {
    background: transparent;
    border: none;
    border-bottom: 2px solid white;
    border-radius: 0;
    color: white;
    font-size: clamp(1rem, 1.5vw, 1.5rem); /* Adjust input text size */
    padding: 1rem;
}

.btn-send {
    background: white;
    color: #6a26ac;
    font-weight: bold;
    padding: 1rem 2rem;
    border: none;
    border-radius: 5px;
    font-size: clamp(1rem, 1.5vw, 1.5rem);
}

/* Responsive grid for smaller screens */
@media (max-width: 768px) {
    .row {
        display: flex;
        flex-direction: column;
    }
    
    .col-md-4 {
        width: 100%;
        margin-bottom: 1rem;
    }
}

    </style>
</head>
<body>
    <div class="contact-section" style="background-image: url('<%= asset_path("7.png") %>');">
        <div class="contact-overlay"></div>
        <div class="contact-form-container">
            <div class="contact-form">
                <h1>Get in touch with us.</h1>
                <h1>We're here to assist you.</h1><br><br>
                    <%= form_with model: @contact, local: true, url: contacts_path do |form| %>
                    <div class="row">
                        <div class="col-md-4">
                        <%= form.text_field :name, class: "form-control", placeholder: "Your Name", required: true %>
                        </div>
                        <div class="col-md-4">
                        <%= form.email_field :email, class: "form-control", placeholder: "Email Address", required: true %>
                        </div>
                        <div class="col-md-4">
                        <%= form.text_field :phone, class: "form-control", placeholder: "Phone Number (optional)", required: true %>
                        </div>
                    </div>
                    <%= form.text_area :message, class: "form-control mt-3", rows: 4, placeholder: "Message", required: true %>
                    
                    <%= form.submit "Send Message", class: "btn btn-send mt-3" %>
                    <% end %>
            </div>
        </div>
    </div>
    <footer class="footer">
        <div class="container">
            <nav class="nav justify-content-center">
                <a href="<%= root_path %>" class="nav-link">Home</a>
                <a href="#" id="about-link" class="nav-link">About</a>
                <a href="#" id="service-link" class="nav-link">Services</a>
                <a href="#" id="contact-link" class="nav-link">Contact Us</a>
                <button style="font-size: medium; color: white;" class="book-link" onclick="window.location.href='/book_session'">Book Session</button>
            </nav>
            <div class="social-icons">
                <a href="#"><i class="bi bi-facebook"></i></a>
                <a href="#"><i class="bi bi-instagram"></i></a>
                <a href="#"><i class="bi bi-linkedin"></i></a>
            </div>
            <div class="divider"></div>
            <p>Non Copyrighted Â© 2024 Upload by Bristol's Independent driving school</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
document.addEventListener("DOMContentLoaded", function() {
  console.log("Smooth scrolling script loaded!"); // Debugging

  document.querySelectorAll("nav a").forEach(link => {
    link.addEventListener("click", function(event) {
      event.preventDefault(); // Prevent default link behavior

      let targetSection = this.id.replace("-link", "-container");
      let targetElement = document.getElementById(targetSection);

      if (targetElement) {
        window.scrollTo({
          top: targetElement.offsetTop - 50, // Adjust offset for navbar height
          behavior: "smooth"
        });
      } else {
        console.error("Section not found:", targetSection);
      }
    });
  });
});
</script>

</body>